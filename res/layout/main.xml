<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="fill_parent"
	android:layout_height="fill_parent" android:gravity="center_horizontal"
	android:id="@+id/main_background">

	<LinearLayout android:orientation="horizontal"
	    android:layout_alignParentTop="true"
		android:layout_width="fill_parent"
		android:gravity="center_vertical|right" android:background="@drawable/action_bar"
		android:layout_height="@dimen/main_button_height" android:id="@+id/action_bar">

	    <!-- Dummy item to prevent AutoCompleteTextView from receiving focus -->
		<LinearLayout
    		android:focusable="true" android:focusableInTouchMode="true"
    		android:layout_width="0px" android:layout_height="0px"/>
	    
	    <LinearLayout 
			android:paddingTop="3dp" android:paddingLeft="1dp"
			android:layout_width="0px" android:layout_weight="1"
			android:layout_height="fill_parent"
			android:gravity="center_vertical|center_horizontal">
			
	 		<AutoCompleteTextView android:layout_height="wrap_content" android:id="@+id/main_edit_text"
				android:singleLine="true" android:imeOptions="actionSearch"
				android:inputType="textFilter" 
				android:drawableLeft="@drawable/ic_btn_search"
				android:drawablePadding="4dp"
				android:layout_width="fill_parent"
				android:gravity="center_vertical|left"
				android:hint="@string/main_edit_text_hint" android:completionThreshold="1"
				android:nextFocusLeft="@+id/main_edit_text"
				android:nextFocusUp="@+id/main_edit_text"/>
		</LinearLayout>

		
		<LinearLayout
    		android:layout_height="fill_parent"
    		android:layout_width="@dimen/main_button_width"
    		android:orientation="horizontal"
    		style="@android:style/Widget.Button"
    		android:id="@+id/main_pause_button" 
    		android:background="@android:drawable/list_selector_background"
			android:gravity="center_vertical|left">
			
    				<View android:layout_height="fill_parent" android:layout_width="1dp" 
		    android:background="@android:color/darker_gray"/>
    		<ImageView android:src="@drawable/ic_media_pause" android:layout_width="0px" android:layout_weight="1"
    		    android:layout_height="wrap_content" android:id="@+id/main_pause_button_image"/>
		</LinearLayout>
		    
		<LinearLayout
    		android:layout_height="fill_parent"
    		android:layout_width="@dimen/main_button_width"
    		android:orientation="horizontal"
    		style="@android:style/Widget.Button"
    		android:id="@+id/main_more_button" 
    		android:background="@android:drawable/list_selector_background"
			android:gravity="center_vertical|left">
    		
		    		<View android:layout_height="fill_parent" android:layout_width="1dp" 
		    android:background="@android:color/darker_gray"/>
		    
    		<ImageView android:src="@drawable/ic_menu_more_32" android:layout_width="0px" android:layout_weight="1"
    		    android:layout_height="wrap_content" android:id="@+id/main_expand_button_image"/>
		</LinearLayout>
		
		<LinearLayout
    		android:layout_height="fill_parent"
    		android:layout_width="@dimen/main_button_width"
    		android:orientation="horizontal"
    		style="@android:style/Widget.Button"
    		android:id="@+id/main_clear_button" 
    		android:background="@android:drawable/list_selector_background"
			android:gravity="center_vertical|left">
    				<View android:layout_height="fill_parent" android:layout_width="1dp" 
		    android:background="@android:color/darker_gray"/>
		        		
    		<ImageView android:src="@drawable/ic_menu_close_clear_cancel_32" android:layout_width="0px" android:layout_weight="1"
    		    android:layout_height="wrap_content" android:id="@+id/main_clear_button_image"/>
		    
    	</LinearLayout>
		
	</LinearLayout>

	<LinearLayout android:layout_width="fill_parent" android:layout_height="wrap_content"
		android:gravity="center_horizontal|center_vertical"
		android:orientation="vertical" android:paddingRight="5dp" android:paddingLeft="5dp"
		android:paddingTop="3dp" android:paddingBottom="1dp" android:layout_below="@+id/action_bar"
		android:id="@+id/main_filename_outer_layout">
		
		<LinearLayout android:layout_width="wrap_content" android:layout_height="wrap_content"
			android:orientation="vertical" android:id="@+id/main_filename_linear_layout">
			
			<View android:layout_height="1dp" android:id="@+id/main_border_view_1"
				android:layout_width="fill_parent"/>
				
			<LinearLayout android:layout_width="wrap_content" android:layout_height="wrap_content"
				android:orientation="horizontal">
					
				<View android:id="@+id/main_border_view_2"
					android:layout_width="1dp" android:layout_height="fill_parent"/>
					
				<LinearLayout android:layout_width="0px" android:layout_weight="1.0" android:layout_height="wrap_content">	
					
					<TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
						android:id="@+id/main_filename_text_view"
						android:paddingLeft="5dp" android:paddingRight="5dp" android:paddingTop="1dp"
						android:paddingBottom="1dp" android:typeface="monospace"/>
				</LinearLayout>
				
				<View android:id="@+id/main_border_view_3"
					android:layout_width="1dp" android:layout_height="fill_parent"/>	
			</LinearLayout>
			
			<View android:layout_height="1dp" android:id="@+id/main_border_view_4"
				android:layout_width="fill_parent"/>

		</LinearLayout>
	</LinearLayout>

	<ProgressBar android:id="@+id/main_dark_progress_bar"
		android:layout_width="wrap_content" android:layout_height="wrap_content"
		android:indeterminate="true" android:visibility="gone"
		android:layout_below="@+id/main_filename_outer_layout"
		android:layout_centerHorizontal="true"/>

	<ProgressBar android:id="@+id/main_light_progress_bar"
		android:layout_width="wrap_content" android:layout_height="wrap_content"
		android:indeterminate="true" android:visibility="gone"
		style="@android:style/Widget.ProgressBar.Inverse"
		android:layout_below="@+id/main_dark_progress_bar"
		android:layout_centerHorizontal="true"/>    
	    
	<com.nolanlawson.logcat.widget.ExceptionCatchingListView android:layout_width="fill_parent"
		android:layout_height="fill_parent" android:id="@android:id/list"
		android:paddingBottom="2dp" android:paddingTop="1dp"
		android:dividerHeight="0px" android:scrollbars="none"
		android:layout_below="@+id/main_light_progress_bar"/>

</RelativeLayout>
